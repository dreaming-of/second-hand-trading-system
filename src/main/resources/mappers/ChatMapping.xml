<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chl.campussecondhandtradingsystem.dao.IChatDao">
    <sql id="selectField">
        chat_id, from_id, to_id, content, sendTime
    </sql>


    <select id="getAllChatById">
        select <include refid="selectField"></include>
        from chat
        where chat_id = #{id}
    </select>

    <insert id="saveChat">
        insert into (<include refid="selectField"></include>)
        values(#{chatId}, #{fromId}, #{toId}, #{content}, #{sendTime})
    </insert>
</mapper>